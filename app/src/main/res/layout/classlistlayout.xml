<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >"

        <Button
            android:id="@+id/NowClass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_default_holo_light"
            android:text="@string/NowClass"
            android:textColor="@color/SelectedButton" />

        <Button
            android:id="@+id/CompletClass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/CompletClass" />

    </LinearLayout>

    <ListView
        android:id="@+id/ClasslistView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </ListView>

</LinearLayout>
